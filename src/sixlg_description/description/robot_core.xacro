<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link">
    </link>


    <!-- BODY LINK -->

    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body_link"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="body_link">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.05"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.1" y="0.1" z="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="body_link">
        <material>Gazebo/Orange</material>
    </gazebo>

    <!-- LEG1 J1 -->

    <joint name="leg1/j1_joint" type="revolute">
        <parent link="body_link"/>
        <child link="leg1/j1_link"/>
        <origin xyz="0 0.04 0.05" rpy="0 0 ${-pi/2}"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="${pi}" velocity="100" effort="100"/>
    </joint>

    <link name="leg1/j1_link">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.03 0.03 0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.03 0.03 0.03"/>
            </geometry>
        </collision>
    </link>

    <!-- LEG2 J2 -->
    <joint name="leg1/j2_joint" type="revolute">
        <parent link="leg1/j1_link"/>
        <child link="leg1/j2_link"/>
        <origin xyz="0 0 0.02" rpy="${-pi/4} 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="0" upper="${pi}" velocity="100" effort="100"/>
    </joint>

    <link name="leg1/j2_link">
        <visual>
            <origin xyz="0 0.04 0.015"/>
            <geometry>
                <box size="0.005 0.08 0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0.04 0.015"/>
            <geometry>
                <box size="0.005 0.08 0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.01" x="0.005" y="0.08" z="0.03">
            <origin xyz="0 0.04 0.015" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEG2 J3 -->
    <joint name="leg1/j3_joint" type="revolute">
        <parent link="leg1/j2_link"/>
        <child link="leg1/j3_link"/>
        <origin xyz="0 0.08 0" rpy="0 0 0"/>
        <axis xyz="-1 0 0"/>
        <limit lower="0" upper="${pi}" velocity="100" effort="100"/>
    </joint>

    <link name="leg1/j3_link">
        <visual>
            <origin xyz="0 0.08 0.01"/>
            <geometry>
                <box size="0.005 0.16 0.02"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0 0.08 0.01"/>
            <geometry>
                <box size="0.005 0.16 0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.01" x="0.005" y="0.016" z="0.02">
            <origin xyz="0 0.08 0.01" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

</robot>